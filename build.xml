<?xml version="1.0" encoding="UTF-8"?>

<project name="iPeer" basedir="." default="build">
    <target name="debug-off" description="turn off the debug">
        <reflexive file="app/config/core.php">
            <filterchain>
                <replaceregexp>
                    <regexp pattern="'DEBUG', 1" replace="'DEBUG', 0"/>
                </replaceregexp>
            </filterchain>
        </reflexive>
    </target>
</project>
